@model Web.Models.ConsorcioVM
@{
    ViewBag.Title = "CrearConsorcio";
    Layout = "~/Views/Shared/LogueadoLayout.cshtml";
    Services.ProvinciaService p = new Services.ProvinciaService(new Repositories.Context.PW3_TP_20202CEntities());
    List<Repositories.Context.Provincia> Provincia = p.ObtenerTodos();
    List<SelectListItem> provincia = Provincia.Select(o => new SelectListItem()
    {
        Text = o.Nombre,
        Value = o.IdProvincia.ToString()
    }).ToList();
}



<form class="form-signin text-center" action="/Consorcio/CrearConsorcio" method="post" enctype="multipart/form-data">
    <h2 class="h3 mb-3 font-weight-normal">Crear Nuevo Consorcio</h2>

    <div class="form-group">
        @Html.EditorFor(Model => Model.Nombre, new { htmlAttributes = new { @class = "mt-1 form-control", placeholder = "Nombre" } })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.DropDownListFor(Model => Model.IdProvincia, provincia, new { @class = "mt-1 form-control" })
    </div>

    <div class="form-group">
        @Html.EditorFor(Model => Model.Ciudad, new { htmlAttributes = new { @class = "mt-1 form-control", rows = "3", placeholder = "Ciudad" } })
        @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.EditorFor(Model => Model.Calle, new { htmlAttributes = new { @class = "mt-1 form-control", rows = "3", placeholder = "Calle" } })
        @Html.ValidationMessageFor(model => model.Calle, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.EditorFor(Model => Model.Altura, new { htmlAttributes = new { @class = "mt-1 form-control",@Value = "", rows = "3", placeholder = "Altura" } })
        @Html.ValidationMessageFor(model => model.Altura, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.EditorFor(Model => Model.DiaVencimientoExpensas, new { htmlAttributes = new { @min = 1, @max = "31", @Value = "", @class = "mt-1 form-control", placeholder = "Dia vencimiento expensa" } })
        @Html.ValidationMessageFor(model => model.DiaVencimientoExpensas, "", new { @class = "text-danger" })
    </div>




    <div class="row">
        <div class="col-sm">
            <input class="btn btn-lg btn-primary btn mt-4" type="submit" name="accion" value="Guardar" />
        </div>
        <div class="col-sm">
            <input class="btn btn-lg btn-outline-success btn mt-4" type="submit" name="accion" value="Guardar y Crear otro Consorcio"/>
        </div>
        <div class="col-sm">
            <a href="/Unidad/CrearUnidad?id=@Model.IdConsorcio" class="btn btn-lg btn-danger btn mt-4">Guardar y Crear Unidad</a>
        </div>
        <div class="col-sm">
            <a href="/Consorcio/Lista" class="btn btn-lg btn-danger btn mt-4">Cancelar</a>
        </div>
    </div>
</form>

@{
        if (ViewData["alerta"] != null)
        {
    <div class="alert alert-success mt-3 mb-3" role="alert">
        @ViewData["alerta"]
    </div>
        }
}